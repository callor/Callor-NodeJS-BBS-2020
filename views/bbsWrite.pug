	script.
		$(function(){
			var toolbar = [
				['style', ['bold', 'italic', 'underline', 'clear']],
				['font', ['strikethrough', 'superscript', 'subscript']],
				['fontsize', ['fontsize']],
				['Font Style', ['fontname']],
				['color', ['color']],
				['para', ['ul', 'ol', 'paragraph']],
				['height', ['height']],
				['table', ['table']],
				['insert', ['link', 'picture', 'hr']],
				['view', ['fullscreen', 'codeview']],
				['help', ['help']]
			];
			$('#summernote').summernote({
				lang: 'ko-KR',
				placeholder: '본문을 작성해 주세요',
				toolbar: toolbar,
				codemirror: { // codemirror options
					theme: 'monokai'
				},
				width:'100%',
				height:'300px',
				



			});

			$("button#btn-list").click(function(){
				document.location.href = "/bbs/list"
			})
		})
	div.container-flud.p-3.text-blue
		form(method="POST")
			fieldset
				div.form-group
					input(type="date",name="b_date",placeholder="날짜선택",value= BBsVO.b_date).form-control
				div.form-group
					input(type="time" name="b_time",placeholder="시간선택",value= BBsVO.b_time).form-control#b_date
				div.form-group
					input(name="b_writer",placeholder="작성자를 입력하세요",value= BBsVO.b_writer).form-control#b_date
				div.form-group
					input(name="b_subject",,placeholder="제목을 입력하세요",value= BBsVO.b_subject).form-control#b_date
				div.form-group
					textarea#summernote(name="b_text", cols="30", rows="50s")= BBsVO.b_text

				div.form-group.d-flex.justify-content-end
